{
  "openapi": "3.0.3",
  "info": {
    "title": "Yoklama Takip API",
    "version": "1.0.0",
    "description": "Supervisor, Öğretmen ve Öğrenci rollerine sahip manuel yoklama sistemi"
  },
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer"
      }
    }
  },
  "security": [
    {
      "bearerAuth": []
    }
  ],
  "paths": {
    "/api/auth/login": {
      "post": {
        "summary": "E-posta ve şifre ile giriş",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "email": {
                    "type": "string"
                  },
                  "password": {
                    "type": "string"
                  }
                },
                "required": ["email", "password"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Başarılı giriş"
          },
          "401": {
            "description": "Hatalı kimlik bilgileri"
          }
        }
      }
    },
    "/api/teacher/classes": {
      "get": {
        "summary": "Öğretmenin sınıf listesi",
        "responses": {
          "200": {
            "description": "Sınıf listesi"
          }
        }
      }
    },
    "/api/teacher/sessions/{id}/attendance": {
      "get": {
        "summary": "Oturum yoklama detayı",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Oturum bulunursa döner"
          },
          "403": {
            "description": "Yetkisiz erişim"
          }
        }
      }
    },
    "/api/student/courses": {
      "get": {
        "summary": "Öğrencinin kayıtlı dersleri",
        "responses": {
          "200": {
            "description": "Ders listesi"
          }
        }
      }
    },
    "/api/supervisor/reports/attendance": {
      "get": {
        "summary": "Devamsızlık raporu",
        "parameters": [
          {
            "name": "format",
            "in": "query",
            "schema": {
              "type": "string",
              "enum": ["json", "csv", "pdf"],
              "default": "json"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Rapor"
          }
        }
      }
    }
  }
}
